package com.binarydevs.controllers;

import java.util.Map;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.binarydevs.DTOs.AdminUserLogin;
import com.binarydevs.Entities.AdminUser;
import com.binarydevs.services.BinaryDevsAdminService;

@RestController
@RequestMapping("/api/admin")
public class BinaryDevsAdminController {
	
	Logger log = LoggerFactory.getLogger(getClass());
	
	@Autowired
	private BinaryDevsAdminService adminService;
	
	@PostMapping("/register")
	public ResponseEntity register(@RequestBody AdminUser userDetails) {
		System.out.println(userDetails);
		log.info("user Details : {}", userDetails);
		return adminService.registerUser(userDetails);
	}
	
	@PostMapping("/login")
	public ResponseEntity login(@RequestBody AdminUserLogin userLogin) {
		System.out.println(userLogin);
		log.info("user Details Login: {}", userLogin);
		return adminService.login(userLogin);
	}
	
	@PostMapping("/refresh")
	public Map<String, String> refreshToken(
	        @RequestHeader("Authorization") String refreshToken
	) {
	    if (!refreshToken.startsWith("Bearer ")) {
	        throw new RuntimeException("Invalid refresh token");
	    }

	    refreshToken = refreshToken.substring(7);

	    String username = jwtService.extractUsername(refreshToken);

	    UserDetails user = userDetailsService.loadUserByUsername(username);

	    if (!jwtService.isRefreshToken(refreshToken)
	            || !jwtService.isTokenValid(refreshToken, user)) {
	        throw new RuntimeException("Refresh token invalid or expired");
	    }

	    String newAccessToken = jwtService.generateAccessToken(user);

	    return Map.of("accessToken", newAccessToken);
	}

}
